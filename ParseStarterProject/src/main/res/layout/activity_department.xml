<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_view_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoblur">

    <ImageView
        android:contentDescription="@string/content_desc"
        android:id="@+id/civil_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/civil"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/ece_textView"
        android:layout_alignLeft="@+id/it_imageView"
        android:layout_alignStart="@+id/it_imageView"
        android:onClick="semesterSelect"/>

    <ImageView
        android:contentDescription="@string/content_desc"
        android:id="@+id/ece_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/electronics"
        android:layout_below="@+id/cse_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="semesterSelect"/>

    <ImageView
        android:contentDescription="@string/content_desc"
        android:id="@+id/it_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/informationtechnology"
        android:layout_marginTop="21dp"
        android:onClick="semesterSelect"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ece_imageView"
        android:layout_toStartOf="@+id/ece_imageView" />

    <ImageView
        android:contentDescription="@string/content_desc"
        android:id="@+id/ee_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/electrical"
        android:layout_alignTop="@+id/civil_imageView"
        android:layout_alignLeft="@+id/cse_imageView"
        android:layout_alignStart="@+id/cse_imageView"
        android:onClick="semesterSelect"/>

    <ImageView
        android:contentDescription="@string/content_desc"
        android:id="@+id/cse_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/computerscience"
        android:onClick="semesterSelect"
        android:layout_above="@+id/cse_textView"
        android:layout_toRightOf="@+id/ece_imageView"
        android:layout_toEndOf="@+id/ece_imageView" />

    <TextView
        android:id="@+id/cse_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/subjectCSE"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#111111"
        android:onClick="semesterSelect"
        android:layout_alignBaseline="@+id/it_textView"
        android:layout_alignBottom="@+id/it_textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/ee_textView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:ems="10"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/subjectEE"
        android:textColor="#111111"
        android:padding="0dp"
        android:layout_below="@+id/ee_imageView"
        android:layout_alignLeft="@+id/cse_textView"
        android:layout_alignStart="@+id/cse_textView"
        android:onClick="semesterSelect"/>

    <TextView
        android:id="@+id/ece_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/subjectECE"
        android:textStyle="bold"
        android:textColor="#111111"
        android:layout_below="@+id/ece_imageView"
        android:layout_centerHorizontal="true"
        android:onClick="semesterSelect"/>

    <TextView
        android:id="@+id/civil_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/subjectCivil"
        android:textStyle="bold"
        android:textColor="#111111"
        android:layout_below="@+id/civil_imageView"
        android:layout_alignLeft="@+id/civil_imageView"
        android:layout_alignStart="@+id/civil_imageView"
        android:onClick="semesterSelect"/>

    <TextView
        android:id="@+id/it_textView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:ems="10"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#111111"
        android:text="@string/subjectIT"
        android:onClick="semesterSelect"
        android:layout_below="@+id/it_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

</RelativeLayout>