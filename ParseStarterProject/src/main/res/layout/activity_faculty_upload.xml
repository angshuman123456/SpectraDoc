<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/logoblur"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.FacultyUploadActivity">

    <Spinner
        android:id="@+id/spinner_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="@string/semester">

    </Spinner>

    <Spinner
        android:id="@+id/spinner_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:tag="@string/subject">
    </Spinner>

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:tag="@string/category">
    </Spinner>

    <TextView
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/back_trans" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_file"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:text="@string/select"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/back_button"
        android:onClick="selectFile"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:text="@string/upload"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/back_button" />

</LinearLayout>
